!rm mask_0008_im1final.fits
!rm runfile2
print('.comp imcalc2', >'runfile2')
print('imcalc2,"moo3.fits","moo5.fits","mask_0008_im1final.fits"', >>'runfile2')
print('exit', >>'runfile2')
!idl < runfile2

