!idl < runfile3
median hoo2e hoo3 101 1 zlorej=-99999 zhirej=888888
imarith hoo2d1 - hoo3 hoo4
cl < tempcl1

!rm *subfinal*
imcomb foo4,hoo6 skysubfinal lthresh=-9999

imdel diff*
imarith foo2d1 - hoo2d1 diff1
cl < tempcl2
imarith diff1 - diff2 diffsubfinal
